@using SportStore.Domain.Entities
@model List<Products>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Catalogus Page";
}

<h1>Catalogus</h1>

<div class="container mt-5">
    <div class="row mb-4">
        <div class="col text-right">
            <a asp-controller="Product" asp-action="Product" class="btn btn-success">Add Product</a>
        </div>
    </div>
    <div class="row">
        @foreach (Products product in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img class="card-img-top" src="@Url.Content("~/photos/" + product.ImageURL)" alt="@product.Name">
                    <div class="card-body text-center">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">€ @product.Price.ToString("N2")</p>
                        <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id" class="btn btn-primary">Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
